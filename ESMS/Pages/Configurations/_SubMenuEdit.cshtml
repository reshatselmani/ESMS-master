@page
@model ESMS.Pages.Configurations._SubMenuEditModel
@{ Layout = null; }

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Ndryshim nen menyse</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-action="_RegisterSubMenu" method="post" id="frmEditSubMenu">
        @Html.HiddenFor(m => m.Input.SMEnc)
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(m => m.Input.MenuName)
                <input asp-for="Input.MenuName" disabled class="form-control" />
                <span asp-validation-for="Input.MenuName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.Input.SubMenu_Sq)
                <input asp-for="Input.SubMenu_Sq" class="form-control" />
                <span asp-validation-for="Input.SubMenu_Sq" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.Input.SubMenu_En)
                <input asp-for="Input.SubMenu_En" class="form-control" />
                <span asp-validation-for="Input.SubMenu_En" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.Input.Controller)
                <input asp-for="Input.Controller" class="form-control" />
                <span asp-validation-for="Input.Controller" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.Input.Page)
                <input asp-for="Input.Page" class="form-control" />
                <span asp-validation-for="Input.Page" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resource.mbylle</button>
    <button type="button" id="btnSave" class="btn btn-primary">@Resource.ruaj</button>
</div>

<script>
    $('#btnSave').click(function () {
        if ($('#frmEditSubMenu').valid()) {
            $('#frmEditSubMenu').submit()
        }
    })
</script>
<partial action="/Shared/_ValidationScriptsPartial" />
