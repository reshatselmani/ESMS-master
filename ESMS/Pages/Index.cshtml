@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<section class="statistic">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                @foreach (var statistic in Model.statistics)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="statistic__item">
                            <h2 class="number">@statistic.Amount</h2>
                            <span class="desc">@statistic.Title</span>
                            <div class="icon">
                                <i class="@statistic.Icon"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<div class="card">
    <div class="card-body card-block">
        <h4>@Resource.aktivitetNeSistem</h4>
        <hr />
        <table id="tblListActivities" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Url</td>
                    <td>@Resource.dtInsertimit</td>
                    <td>Ip address</td>
                    <td>@Resource.emriKompjuterit</td>
                    <td>@Resource.statusi</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listLogs)
                {
                    <tr>
                        <td>@item.Url</td>
                        <td>@item.dtInserted.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@item.IpAdress</td>
                        <td>@item.HostName</td>
                        <td>@item.status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tblListActivities').DataTable({
            responsive: true,
            order: false,
            autoWidth: false,
            "language": {
                "lengthMenu": "Duke shfaqur _MENU_ rreshta për faqe",
                "zeroRecords": "Nuk ka asnjë të dhënë",
                "info": "Duke shfaqur faqen _PAGE_ nga _PAGES_",
                "infoEmpty": "Nuk ka asnjë të dhënë",
                "infoFiltered": "(të filtruara nga _MAX_ rreshta)",
                "search": "Kërko",
                "paginate": {
                    "previous": "Prapa",
                    "first": "E para",
                    "last": "E fundit",
                    "next": "Para"
                }
            }
        });
    })

</script>